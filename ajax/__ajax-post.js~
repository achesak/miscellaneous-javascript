$.post = function(x, y) {
    var r = new XMLHttpRequest();
    var c = 0;
    var t;
    var p1;
    if(y.async === undefined) {
        y.async = true;
    }
    if(typeof y.type != "string") {
        y.type = "text";
    }
    r.open("POST", x, y.async);
    r.setRequestHeader("Content-Type", "application/x-www-form-urlencoded");
    if(y.headers) {
        for (var i in y.headers) {
            r.setRequestHeader(i, y.headers[i]);
        }
    }
    if(y.onStart) {
        y.onStart();
    }
    if(y.async) {
        if(y.timeout) {
            t = setTimeout(function() {
                r.abort();
                if(y.onTimeout) {
                    y.onTimeout();
                }
            }, y.timeout);
        }